<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvPostTitle2"
        android:layout_width="313dp"
        android:layout_height="29dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPostTitle" />

    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="313dp"
        android:layout_height="29dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:text="Date of post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPostDescription"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="52dp"
        android:text="Description "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPostTitle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="184dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPostDescription"
        app:layout_constraintVertical_bias="0.022"
        tools:srcCompat="@drawable/image_filler" />

    <ImageButton
        android:id="@+id/btnLike"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.025"
        tools:srcCompat="@drawable/ic_like_custom" />

    <ImageButton
        android:id="@+id/btnShare"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:tint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.025"
        tools:srcCompat="@drawable/ic_share_custom" />

</android.support.constraint.ConstraintLayout>